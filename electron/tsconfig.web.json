{
  "extends": "./tsconfig.json",
  "include": [
    "src/renderer"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@renderer/*": ["src/renderer/*"],
      "@components/*": ["../src/components/*"],
      "@ui/*": ["../src/components/ui/*"]
    }
  }
}