{
  "extends": "./tsconfig.json",
  "include": [
    "src/renderer",
    "../src/components",
    "../src/lib",
    "../src/hooks",
    "../src/utils",
    "../src/types"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@renderer/*": ["src/renderer/*"],
      "@components/*": ["../src/components/*"],
      "@ui/*": ["../src/components/ui/*"],
      "@lib/*": ["../src/lib/*"]
    }
  }
}